<div class="body">
    <div class="container">
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user  %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@user) do %>
						<%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @user.name %>
						<% end %>
					</td>
					<td><%= link_to @books.title, book_path(@books) %></td>
					<td><%= @books.body %></td>

				<% if @user == current_user %>
                    <td><%= link_to 'Edit', edit_book_path  %></td>
                    <td><%= link_to 'Destroy', book_path, method: :delete, "data-confirm" => "本当に削除してもよろしいですか？"  %></td>
                <% else %>
                    <th></th>
                    <th></th>
                <% end %>
				</tr>
			</table>

	</div>
</div>
</div>
</div>
